script(type="text/x-template")#slider-container       
    .works__slider
        display(
            :works='works'
            :current-work="currentWork"
            :current-index ="currentIndex"
            @slide="handleSlide"
        )
        .slider__number 2      
        info(
            :current-work="currentWork"
        )
script(type="text/x-template")#slider-display   
    .works__left
        .slider
            img(:src="currentWork.photo", alt="").slider__fillpic
            thumbs(
                :works='works'
                :current-work ='currentWork'
            )
            btns(
                @slide="$emit('slide', $event)"
            )
        .slider__number(:data-slide='currentIndex + 1')
script(type="text/x-template")#slider-info  
    .works__right
        tags(
            :tags="tagsArray"
        )
        .works__text
            h3.works__title {{currentWork.title}}
            .works__desc-text
                p {{currentWork.desc}}
            a(:href="currentWork.link").works__desc-link 
                +icon("link", "works__desc-icon")
                .works-link__text Посмотреть сайт 
    
script(type="text/x-template")#slider-btns
    .slider__buttons
        .slider__button 
            button(@click.prevent="$emit('slide','prev')").slider-buttons__item.slider-buttons__item--slide--prev
                +icon('sa','slider__button-arrow')
            button(@click.prevent="$emit('slide','next')").slider-buttons__item.slider-buttons__item--slide--next
                +icon('sa','slider__button-arrow')
script(type="text/x-template")#slider-thumbs
    .slider__preview
        ul.previews 
            li.previews__item(
                v-for='work in works'
                :key="work.id"
                :class="{previews__active: work.id === currentWork.id }"
              
                )
                a(href="#").slider__previews-link
                    img(:src="work.photo", alt="").previews__pic
script(type="text/x-template")#slider-tags
    .works__tags
        ul.tags
            li.tags__item(v-for="tag in tags" :key="tag")
                .tag {{tag}}