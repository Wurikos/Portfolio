.skill__shape{
    width: 130px;
    height: 130px;
    fill: transparent;
    stroke: black;
    stroke-width: 4px;
    transform: rotate(180deg);
      @include tablets{
       width: 100px;
       height:  100px;
    }
    @include phones{
       width: 110px;
       height:  110px;
     }
}
.skill{
    position: relative;
    width: 160px;
    height: 160px;
    fill: transparent;
    @include tablets{
        margin-right: 20px;
        &:last-child{
            margin-right: none;
        }
    }

    @include phones{
        width: 130px;
        height: 130px;
    }
}
.skill__title{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    font-size: 18px;
    font-weight: 600;
    color: #969595;
}

.skill__circle--under {
    stroke: grey;
    stroke-width: 5px;
    opacity: 0.6;
}
.skill__circle--above {
    stroke-width: 12px;
    stroke-dasharray: 408;
    animation: animateSkill 100s linear infinite;
    animation-play-state: paused;
}
@keyframes animateSkill{
    from {
        stroke-dashoffset: 408;
    }
    to {
        stroke-dashoffset: 0;
    }
}