.works__title {
font-size: 30px;
font-weight: bold;
padding-bottom: 12%;
}

.works__desc-text {
font-weight: 600;
line-height: 1.8;
padding-bottom: 11%;
}

.works__desc-link {
    display: flex;
    color: #586fd3;
    font-size: 18px;
    font-weight: bold;
    align-items: center;
    text-decoration:none;

    &:hover{
        text-decoration:underline;
        transition: 1s;
    }
}

.works__desc-icon {
    width: 20px;
    height: 15px;
    fill: #586fd3;
    margin-right: 20px;
}
