
.about{
     background: url('../images/content/bg/about.jpg') no-repeat center top /cover;
     padding: 165px 0px;

     @include desktop{
        padding: 165px 20px;
     }
       @include tablets{
        padding: 165px 0px;
     }
     @include phones{
        padding: 50px 0px;
     }
     
}
.about__container{
    display: flex;
    justify-content: center;
    z-index: 5;
    
    @include phones{
        flex-direction: column;
        padding-bottom: 100px;
     }
}

.about__left{
 width: 290px;
 z-index: 20;
 @include tablets{
        padding-bottom: 70px;
     }
}

.about__prolog{
    opacity: 0.8;
    margin-bottom: 20px;
    font-weight: 800;
    font-size: 16px;
    color: white;

    @include phones{
        font-size: 14px;
    }
}
.about__title{
    color: white;
    margin-bottom: 40px;
    font-weight: 600;
    font-size: 36px;

    @include phones{
        font-size: 30px;
    }
}
.about__left, .about__right{
    width: 50%;
    @include tablets{
        width: 100%;
     }
}
.about__right{
    z-index: 20;
    color: #9a9895;
}
.about__text {
    opacity: 0.6;
    margin-bottom: 75px;
    font-weight: 800;
    font-size: 16px;
    line-height: 1.9;
    color: white;

    @include phones{
        font-size: 14px;
    }
}
.about__ps{
    font-style: italic;
    line-height: 1.9;
    @include phones{
        font-size: 14px;
    }
}