.slider__buttons{
    position: relative; 
}
.slider__button{
    position: absolute;
    left: 0;
    bottom: 60px;
    background: #353e4e;
   
    @include phones {
        z-index: 2;
        left: -44px;
        bottom: 0px;
    }
        
}
.slider-buttons__item{
    background: #353e4e;

     &:hover{
        background:#ff9a00;;
        transition: 0.2s
    }
}